#!/usr/local/bin/perl

use Config;
use strict;
use warnings;

my $separator = $Config{path_sep};
my $pattern = shift(@ARGV);
my @pfade = split /$separator/, $ENV{"PATH"};
my $pfad;
my @files;
my $file;

foreach $pfad (@pfade) {
	if (-e $pfad) {
		chdir $pfad;
		@files=<*>;
		foreach $file (@files) {
			if (-x $file) {
				if ($file =~ m/$pattern/) {
					print "$file is in $pfad\n";
				}
			}
		}
	}
}

exit 0

# vim: sw=4
